<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
  android:layout_width="fill_parent"
  >
	<ImageView
		android:id="@+id/cover_art"
		android:scaleType="fitCenter"
		android:layout_height="48dip"
		android:layout_width="48dip"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_margin="3dp"
		android:src="@drawable/pv_012"
		/>
	<TextView
		android:id="@+id/difficulty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_alignParentTop="true"
		android:text="★8"
		/>
	<ImageView
		android:id="@+id/clear_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/difficulty"
		android:layout_marginLeft="3dp"
		android:src="@drawable/clear2"
		/>
	<TextView
		android:id="@+id/trial_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/clear_status"
		android:layout_marginLeft="3dp"
		android:text="C-TRIAL"
		/>
	<TextView
		android:id="@+id/ranking"
		android:textColor="#FF0000"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/trial_status"
		android:gravity="right"
		android:layout_marginRight="6dp"
		android:text="300"
		/>
	<TextView
		android:id="@+id/music_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:maxLines="1"
		android:ellipsize="end"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_below="@+id/difficulty"
		android:text="ワールドイズマイン"
		/>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_below="@+id/music_title"
		>
		<TextView
			android:id="@+id/high_score"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:maxLines="1"
			android:ellipsize="end"
			android:text="スコア: 378260pts"
			/>
		<TextView
			android:id="@+id/achivement"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:maxLines="1"
			android:ellipsize="end"
			android:text="達成率: 89.91%"
			/>
	</LinearLayout>
</RelativeLayout>
