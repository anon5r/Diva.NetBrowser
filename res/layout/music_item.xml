<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="fill_parent">
	<ImageView android:id="@+id/cover_art" android:layout_height="48dip" android:layout_width="48dip" android:background="@drawable/pv_012" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_margin="3dp"></ImageView>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/difficulty" android:text="★8" android:layout_toRightOf="@+id/cover_art" android:layout_alignParentTop="true"></TextView>
	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/clear_status" android:src="@drawable/clear2" android:layout_toRightOf="@+id/difficulty" android:layout_marginLeft="3dp"></ImageView>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/trial_status" android:text="C-TRIAL" android:layout_toRightOf="@+id/clear_status" android:layout_marginLeft="3dp"></TextView>
	<TextView android:layout_height="wrap_content" android:id="@+id/ranking" android:layout_alignParentTop="true" android:textColor="#FF0000" android:text="300" android:layout_width="fill_parent" android:layout_toRightOf="@+id/trial_status" android:gravity="right" android:layout_marginRight="6dp"></TextView>
	<TextView android:layout_height="wrap_content" android:text="ワールドイズマイン" android:layout_width="fill_parent" android:maxLines="1" android:id="@+id/music_title" android:ellipsize="end" android:layout_toRightOf="@+id/cover_art" android:layout_centerVertical="true" android:layout_below="@+id/difficulty"></TextView>
	<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_toRightOf="@+id/cover_art" android:layout_below="@+id/music_title">
		<TextView android:layout_height="wrap_content" android:id="@+id/high_score" android:layout_width="fill_parent" android:maxLines="1" android:layout_weight="1" android:text="スコア: 378260pts" android:ellipsize="end"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/achivement" android:layout_width="fill_parent" android:maxLines="1" android:layout_weight="1" android:text="達成率: 89.91%" android:ellipsize="end"></TextView>
	</LinearLayout>
</RelativeLayout>
