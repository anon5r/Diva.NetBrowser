<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:paddingRight="6dip"
	>
	<ImageView
		android:id="@+id/cover_art"
		android:scaleType="fitCenter"
		android:layout_height="48dip"
		android:layout_width="48dip"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_margin="3dp"
		android:src="@drawable/pv_012"
		/>
	<include layout="@layout/music_summary"
		android:id="@+id/summary"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_toLeftOf="@+id/status"
		android:layout_alignParentTop="true"
		/>
	<include layout="@layout/music_status"
		android:id="@+id/status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/summary"
		android:layout_alignBottom="@+id/summary"
		/>
	<TextView
		android:id="@+id/music_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:maxLines="1"
		android:ellipsize="end"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_below="@+id/summary"
		android:text="ワールドイズマイン"
		/>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_below="@+id/music_title"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:ellipsize="end"
			android:text="スコア:"
			/>
		<TextView
			android:id="@+id/high_score"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginRight="6dip"
			android:maxLines="1"
			android:ellipsize="end"
			android:gravity="right"
			android:text="378260pts"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:ellipsize="end"
			android:text="達成率:"
			/>
		<TextView
			android:id="@+id/achivement"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:maxLines="1"
			android:ellipsize="end"
			android:gravity="right"
			android:text="89.91%"
			/>
	</LinearLayout>
</RelativeLayout>
