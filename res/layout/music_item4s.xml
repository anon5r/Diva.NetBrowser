<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
  android:layout_width="fill_parent"
android:layout_marginRight="6dip"
  >
	<ImageView
		android:id="@+id/cover_art"
		android:scaleType="fitCenter"
		android:layout_height="64dip"
		android:layout_width="64dip"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_margin="3dp"
		android:src="@drawable/pv_012"
		/>
	<TextView
		android:id="@+id/difficulty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_alignParentTop="true"
		android:text="★8"
		/>
	<ImageView
		android:id="@+id/clear_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/difficulty"
		android:layout_marginLeft="3dp"
		android:src="@drawable/clear2"
		/>
	<TextView
		android:id="@+id/trial_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/clear_status"
		android:layout_marginLeft="3dp"
		android:text="C-TRIAL"
		/>
	<TextView
		android:id="@+id/ranking"
		android:textColor="#FF0000"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/trial_status"
		android:gravity="right"
		android:text="300"
		/>
	<TextView
		android:id="@+id/music_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:maxLines="1"
		android:ellipsize="end"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_below="@+id/difficulty"
		android:text="ワールドイズマイン"
		/>
	<TextView
		android:id="@+id/high_score_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_below="@+id/music_title"
		android:layout_marginLeft="16dip"
		android:maxLines="1"
		android:ellipsize="end"
		android:text="スコア:"
		/>
	<TextView
		android:id="@+id/high_score"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/high_score_title"
		android:layout_alignParentRight="true"
		android:maxLines="1"
		android:ellipsize="end"
		android:gravity="right"
		android:text="378260pts"
		/>
	<TextView
		android:id="@+id/achivement_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cover_art"
		android:layout_below="@+id/high_score_title"
		android:layout_marginLeft="16dip"
		android:maxLines="1"
		android:ellipsize="end"
		android:text="達成率:"
		/>
	<TextView
		android:id="@+id/achivement"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/achivement_title"
		android:layout_toLeftOf="@+id/saturation"
		android:layout_alignWithParentIfMissing="true"
		android:maxLines="1"
		android:ellipsize="end"
		android:gravity="right"
		android:text="89.91%"
		/>
	<TextView
		android:id="@+id/saturation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/achivement_title"
		android:layout_toLeftOf="@+id/difference_to_saturation"
		android:layout_alignWithParentIfMissing="true"
		android:maxLines="1"
		android:ellipsize="end"
		android:gravity="right"
		android:text="/106.91%"
		/>
	<TextView
		android:id="@+id/difference_to_saturation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="6dip"
		android:layout_alignTop="@+id/achivement_title"
		android:layout_alignParentRight="true"
		android:maxLines="1"
		android:ellipsize="end"
		android:gravity="right"
		android:text="(89.91%)"
		android:visibility="visible"
		/>
</RelativeLayout>
