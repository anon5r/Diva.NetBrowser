<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.diva.browser"
      android:versionCode="309" android:versionName="3.9">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name=".DdN">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name" android:screenOrientation="user" android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InformationActivity"></activity>
        <activity android:name=".AllMusicActivity"></activity>
        <activity android:name=".MyListActivity"></activity>
        <activity android:name=".MusicDetailActivity" android:theme="@style/Theme.Translucent"></activity>
        <activity android:name=".WebBrowseActivity" android:configChanges="keyboardHidden|orientation"></activity>
        <activity android:name=".CommonConfigActivity"></activity>
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".settings.TitleListActivity"></activity>
        <activity android:name=".settings.DecorTitlesActivity"></activity>
        <activity android:name=".settings.ModuleListActivity"></activity>
        <activity android:name=".settings.SkinListActivity"></activity>
        <activity android:name=".settings.SEListActivity"></activity>
        <activity android:name=".settings.ShopActivity"></activity>
        <receiver android:name=".DdNBrowserReceiver">
            <intent-filter>
                <action android:name="net.diva.browser.action.DOWNLOAD_RANKING"></action>
            </intent-filter>
        </receiver>
        <service android:name=".DownloadRankingService"></service>
    </application>

    <uses-sdk android:minSdkVersion="4" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
</manifest>
